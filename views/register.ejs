<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Register
      </h1>
        <% if(typeof errors != "undefined" && errors != null && errors.length != null && errors.length > 0) { %>
         <% errors.forEach((i) => { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <%= i.msg %>
        </div>
          <% }) %>
        <%} %>
            <% if(success_msg != '') { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success_msg %>
            </div> <%} %>
              <% if(error_msg != '') { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <%= error_msg %>
                </div>
                <%} %>
              <% if(error != '') { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <%= error %>
                </div>
                <%} %>
      

        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="Username">Username</label>
            <input type="Username" id="Username" name="username" class="form-control" placeholder="Enter Username"
              value="<%= typeof username != 'undefined' ? username : '' %>" />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>" />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>
